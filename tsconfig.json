{
  "compilerOptions": {
    "target": "es2019",                              
   
    "module": "commonjs",                               
    "moduleResolution": "node",
   "esModuleInterop": true,           
   "rootDir": "src",
   "typeRoots": [
     "./src/@types",
     "./node_modules/@types"
   ],                  
   "outDir": "./dist",
   "removeComments": true,
   "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                           
  }
}
